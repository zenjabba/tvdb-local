# TVDB API Configuration
TVDB_API_KEY=your_tvdb_api_key_here
TVDB_PIN=your_optional_pin_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/tvdb_proxy
TEST_DATABASE_URL=postgresql://postgres:postgres@db:5432/tvdb_proxy_test

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
SECRET_KEY=your_super_secret_key_here_change_this_in_production
API_V1_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Sync Configuration
SYNC_INTERVAL_MINUTES=15
INITIAL_SYNC_BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10

# Cache Configuration
CACHE_TTL_STATIC_HOURS=24
CACHE_TTL_DYNAMIC_HOURS=1
CACHE_TTL_POPULAR_MINUTES=30

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# S3/Storage Configuration (Ceph S3 Compatible)
# For Ceph S3, set your Ceph S3 endpoint URL
S3_ENDPOINT_URL=http://minio:9000  # For local MinIO, or your Ceph S3 URL
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_REGION=us-east-1
S3_BUCKET_NAME=tvdb-images
S3_USE_SSL=false  # Set to true for production
S3_VERIFY_SSL=false  # Set to true for production
# CDN_BASE_URL=https://cdn.example.com  # Optional CDN URL

# Storage Backend Selection
STORAGE_BACKEND=s3  # Options: s3, local, none
LOCAL_STORAGE_PATH=/app/storage/images

# Image Storage Configuration
MAX_IMAGE_FILE_SIZE_MB=50  # Maximum file size for raw images

# Image Sync Configuration
IMAGE_SYNC_BATCH_SIZE=50
IMAGE_SYNC_CONCURRENT_DOWNLOADS=5
IMAGE_SYNC_RETRY_FAILED=true
IMAGE_SYNC_RETRY_AFTER_HOURS=24

# Docker specific
POSTGRES_DB=tvdb_proxy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres